#!/bin/zsh

COPY=yes
while true; do
	case $1 in
		--no-copy)
			COPY=no
			shift;
			;;
		*)	
			break;
			;;
	esac
done
#
#VAR="$(printf "%q" "${@}")"
VAR=$1
TARGET=${2:-.}

BRANCH=$($SVN info 2>&1 | grep '^URL:' | egrep -o '(tags|branches)/[^/]+|trunk' | egrep -o '[^/]+$')
if [[ $? != 0 ]] exit 1

PROPS=$(
	while read line; do
		PROP=$(echo $line | cut -d: -f1 | sed "s/\ //g" )
		VAL=$(echo $line | cut -d: -f2- | sed "s/^\ *//" )
		echo ${PROP}=${VAL}
	done <<< $($SVN info $TARGET)
	echo Branch=$BRANCH
)

if [ -z "$VAR" ]; then
	echo $PROPS
else 
	VALUE=$(echo $PROPS | egrep "^${VAR}=" | cut -d= -f2-)
	if [ "$COPY" = "yes" ]; then
		echo -n $VALUE | clip-copy 
	else
		echo $VALUE
	fi
fi
