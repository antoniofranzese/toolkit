#!/bin/zsh

KAFKA_TOPICS=$KAFKA_HOME/bin/kafka-topics.sh

CMD=$1
[[ $# > 0 ]] && shift

case "$CMD" in 

	create)
		if [ -z "$1" ]; then
			echo -n "--topic name --replication-factor 1 --partitions 1" | clip-copy  
			echo
		else
			eval $KAFKA_TOPICS --create $*	
		fi
		;;

	alter)
		if [ -z "$1" ]; then
			echo -n "--topic name --config retention.ms=10000 --deleteConfig retention.ms" | clip-copy 
			echo
		else
			eval $KAFKA_TOPICS --alter $*	
		fi
		;;

	delete)
		if [ -z "$1" ]; then
			echo -n "--topic name" | clip-copy 
			echo
		else
			eval $KAFKA_TOPICS --delete $*	
		fi
		;;

	describe)
		eval $KAFKA_TOPICS --describe $*	
		;;

	list|browse)
		eval $KAFKA_TOPICS --list $*	
		;;

	*)
		eval $KAFKA_TOPICS $CMD $*	
		;;
esac
