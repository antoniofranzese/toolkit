#!/bin/zsh

FZF=(-m --preview-window="up:70%" --preview="svn preview {4}")

if [ -z "$1" ]; then
	svn changes | grep -v "^/\s*\\?" \
		| fzf ${FZF[@]} --header-lines=1 \
			--header=$'\n''^Space=Select all' \
			--bind='ctrl-space:select-all' \
		| awk '{ print $4 }' \
		| xargs -n1 $SVN revert 
else
	$SVN revert $*
fi
